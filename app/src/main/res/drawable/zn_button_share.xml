<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape android:shape="rectangle" >
          <solid android:color="@color/zn_pressed" />
        </shape>
      </item>
      <item>
        <bitmap android:src="@drawable/zn_ic_share" android:gravity="center|right" />
      </item>
    </layer-list>
  </item>

  <item android:state_enabled="true">
    <layer-list>
      <item>
        <bitmap android:src="@drawable/zn_ic_share" android:gravity="center|right" />
      </item>
    </layer-list>
  </item>

</selector>